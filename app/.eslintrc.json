{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "browser": true
  },
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "fetch": false
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-use-before-define": "off",
    "import/no-unresolved": 0,
    "linebreak-style": "off",
    "indent": "off",
    "import/prefer-default-export": "off",
    "import/extensions": "off",
    "padded-blocks": "off",
    "comma-dangle": "off"
  }
}
