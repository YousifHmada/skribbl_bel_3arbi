{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-use-before-define": "off",
    "prefer-arrow-callback": "off",
    "class-methods-use-this": "off",
    "linebreak-style": "off",
    "indent": "off",
    "import/prefer-default-export": "off",
    "padded-blocks": "off",
    "comma-dangle": "off"
  },
  "ignorePatterns": ["**/node_modules/**"]
}
